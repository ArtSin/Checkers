{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-CheckersBot",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/CheckersBot/CheckersBot.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-CheckersBot",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/CheckersBot/CheckersBot.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "-c",
                "Release",
                "-r",
                "linux-x64",
                "-p:PublishSingleFile=true",
                "-p:PublishTrimmed=True",
                "--self-contained",
                "true"
            ],
            "problemMatcher": "$msCompile"
        },
